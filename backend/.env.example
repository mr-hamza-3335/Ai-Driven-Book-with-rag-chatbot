# Backend API Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =====================================================
# REQUIRED - Gemini API (primary LLM)
# =====================================================
GEMINI_API_KEY=your-gemini-api-key-here

# =====================================================
# REQUIRED - Qdrant Cloud (Vector Database)
# =====================================================
QDRANT_URL=https://your-cluster-id.qdrant.cloud
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=book_chunks

# =====================================================
# REQUIRED - Neon Postgres (Analytics Database)
# =====================================================
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =====================================================
# OPTIONAL - OpenAI API (fallback, not used)
# =====================================================
OPENAI_API_KEY=your-openai-api-key-here

# =====================================================
# PRODUCTION - CORS Configuration
# =====================================================
# For local development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# For production (replace with your Vercel URL):
# CORS_ORIGINS=https://your-app.vercel.app,https://your-domain.com

# =====================================================
# OPTIONAL - Rate Limiting & Security
# =====================================================
RATE_LIMIT_PER_MINUTE=60
MAX_PAYLOAD_SIZE=1048576

# =====================================================
# OPTIONAL - Logging & Monitoring
# =====================================================
LOG_LEVEL=INFO

# =====================================================
# OPTIONAL - Application Metadata
# =====================================================
APP_VERSION=1.0.0
